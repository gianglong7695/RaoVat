<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sign_up_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_signup"

    tools:context="poly.fall16.pro2051.group8.raovat.activities.SignUpDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">
            <TextView
                android:id="@+id/tvLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin cá nhân"
                android:layout_gravity="center_horizontal"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên của bạn"
                app:met_singleLineEllipsis="true"
                android:imeOptions="actionNext"
                android:maxLines="1"
                app:met_floatingLabel="highlight"
                app:met_textColor="@color/white"
                app:met_iconLeft="@drawable/ic_name_50px_white"
                app:met_iconPadding="0dp"
                app:met_primaryColor="@color/white"
                android:layout_marginTop="20dp"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số điện thoại của bạn"
                android:maxLines="1"
                android:maxLength="11"
                app:met_singleLineEllipsis="true"
                android:imeOptions="actionNext"
                android:inputType="number"
                app:met_floatingLabel="highlight"
                app:met_textColor="@color/white"
                app:met_iconLeft="@drawable/ic_phone_50px_white"
                app:met_iconPadding="0dp"
                app:met_primaryColor="@color/white"
                app:met_minCharacters="9"
                app:met_maxCharacters="11"
                android:id="@+id/etPhone" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email bạn"
                app:met_singleLineEllipsis="true"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                app:met_floatingLabel="highlight"
                app:met_textColor="@color/white"
                app:met_iconLeft="@drawable/ic_email_50px_white"
                app:met_iconPadding="0dp"
                app:met_primaryColor="@color/white"
                android:id="@+id/etEmail" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Địa chỉ nơi ở hiện tại"
                app:met_singleLineEllipsis="true"
                android:imeOptions="actionDone"
                android:inputType="text"
                app:met_floatingLabel="highlight"
                app:met_textColor="@color/white"
                app:met_iconLeft="@drawable/ic_location_50px_black"
                app:met_iconPadding="0dp"
                app:met_primaryColor="@color/white"
                android:id="@+id/etAddress" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:id="@+id/layout_avatar">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivAvatar"
                    android:src="@drawable/ic_user_50px_white_p50"
                    app:civ_fill_color="@color/gray1"
                    android:layout_width="75dp"
                    android:layout_height="75dp" />
                <TextView
                    android:textColor="@color/gray1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textSize="18sp"
                    android:text="Ảnh đại diện"/>
            </LinearLayout>


            <Button
                android:id="@+id/btSignUp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_border_button_transparent"
                android:text="Hoàn tất đăng ký"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="19sp"/>

            <Button
                android:id="@+id/btBack"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_border_button_transparent"
                android:text="Quay lại"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="19sp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
